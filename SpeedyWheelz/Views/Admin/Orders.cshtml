@using Newtonsoft.Json 
@model List<SpeedyWheelz.Models.Order>

<script>
    console.log('@Model');
</script>

@{
        // Deserialize the JSON object
        var items = JsonConvert.DeserializeObject<List<SpeedyWheelz.Models.CartItem>>(Model[0].CartItemsJsonItems);
}
<!--
