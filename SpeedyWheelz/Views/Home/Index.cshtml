@Scripts.Render("~/bundles/jquery")


<script>
    $(document).ready(function () {
        $("#scroll").click(function () {
            $('html, body').animate({
                scrollTop: $("#itemCatalog").offset().top
            }, 2000);
        });
    })
</script>