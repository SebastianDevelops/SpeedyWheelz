@model IEnumerable<SpeedyWheelz.Models.Product>


<div class="hero-wrap" style="background-image: url('../../images/bg_4.jpg'); " data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-8 ftco-animate d-flex align-items-end">
                <div class="text w-100 text-center">
                    <h1 class="mb-4">Good <span>Drink</span> for Good <span>Moments</span>.</h1>
                    <p id="scroll"><a href="#itemCatalog" class="btn btn-primary py-2 px-4">Shop Now</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-intro">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-4 d-flex">
                <div class="intro d-lg-flex w-100 ftco-animate">
                    <div class="icon">
                        <span class="flaticon-support"></span>
                    </div>
                    <div class="text">
                        <h2>Online Support 24/7</h2>
                        <p>If you have any queries, you can contact support directly on <a style="color: black; font-weight: bolder" href="https://api.whatsapp.com/send?phone=270000000000&text=Hello this is the starting message">WhatsApp <i class="fa fa-whatsapp" aria-hidden="true"></i></a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex">
                <div class="intro color-1 d-lg-flex w-100 ftco-animate">
                    <div class="icon">
                        <span class="flaticon-cashback"></span>
                    </div>
                    <div class="text">
                        <h2>Quality Guranteed</h2>
                        <p>We provide the the <span style="font-weight: bolder;">Speediest</span> service guranteed to put a smile on your face.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex">
                <div class="intro color-2 d-lg-flex w-100 ftco-animate">
                    <div class="icon">
                        <span class="flaticon-free-delivery"></span>
                    </div>
                    <div class="text">
                        <h2>Free Delivery &amp; For Over R500</h2>
                        <p>Does your order exceed R500, delivery on us.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="itemCatalog" class="ftco-section ftco-no-pb">
