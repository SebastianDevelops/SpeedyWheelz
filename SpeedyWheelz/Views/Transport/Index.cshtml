@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero section -->
<div class="jumbotron">
    <div class="container">
        <h1>Get a ride in minutes</h1>
        <p>Tap a button, get a ride. It's that easy.</p>
        <form>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Where to?">
            </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block">Request a Ride</button>
        </form>
    </div>
</div>
<footer class="footer">
    <div class="container">
        <p>&copy; @DateTime.Now.Date.ToString("yyyy-MM-dd") TierKos</p>
    </div>
</footer>